<% if (logined !== 'ADMIN') { %>
	<script>
		alert('권한이 부족합니다.');
		location.href = '/';
	</script>
<% } %>
<!-- 권한 및 로그인 확인 -->
    <h3>사용자 수정</h3>
    <% if (boardtypes.length === 0) { %>
        <table class="table table-bordered border-primary ">
            <tr><td>내용 없음</td></tr>
        </table>
        <% } else { %>
            <% var i = 0;
            while(i < boardtypes.length) { %>
                <table class="table table-bordered border-primary">
                    <thead>
                        <td>제목</td>
                        <td>페이지 당 글 수</td>
                        <td>설명</td>
                        <td>일반 사용자 쓰기 가능 여부</td>
                        <td>댓글 사능 여부</td>
                    </thead>
                    <tr>
                        <td><%= boardtypes[i].title%></td>
                        <td><%= boardtypes[i].numPerPage %></td>
                        <td><%= boardtypes[i].description%></td>
                        <td><%= boardtypes[i].write_YN%></td>
                        <td><%= boardtypes[i].re_YN%></td>
                        <td><a href="/board/type/update/<%= boardtypes[i].type_id %>">수정</a></td>
                        <td><a href="/board/type/delete/<%= boardtypes[i].type_id %>" onclick='if(confirm("정말로 삭제하시겠습니까?")==false){ return false }'>삭제</a></td>
                    </tr>
                </table>
        <% i += 1 }} %>